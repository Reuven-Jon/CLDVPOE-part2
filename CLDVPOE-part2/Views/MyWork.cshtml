@model IEnumerable<CLDVPOE_part2.Models.Product>

@{
    ViewData["Title"] = "My Work";
}

<div class="container">
    <h1>Our Craftwork</h1>
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img class="card-img-top" src="~/images/@product.ImagePath" alt="@product.Name">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <p class="card-text">Price: @product.Price.ToString("C")</p>
                        <a href="@Url.Action("AddToCart", "MyWork", new { id = product.ProductID })" class="btn btn-primary">Add to Cart</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .container {
        margin-top: 20px;
    }

    .card {
        width: 100%;
        margin-bottom: 20px;
    }

        .card img {
            height: 200px;
            object-fit: cover;
        }
</style>
